<div class="m-12 border-2 border-slate-700">
  <h2 class="block text-lg p-6 mb-6 font-bold bg-slate-700 text-neutral-50">Sign up</h2>

  <form class="block m-12" id="signup-form">
    <div class="mb-3">
      <label class="block p-0 font-semibold text-sm mb-1" for="username-signup">Username</label>
      <input class="text-sm p-2 pl-3 rounded-lg w-full border border-gray-300 focus:outline-sky-600" type="text" id="username-signup" placeholder="John101" />
    </div>
    <div class="mb-3">
      <label class="block p-0 font-semibold text-sm mb-1" for="password-signup">Password</label>
      <input class="text-sm p-2 pl-3 rounded-lg w-full border border-gray-300 focus:outline-sky-600" type="password" id="password-signup" placeholder="Password" />
    </div>
    <div class="mt-6">
      <button class="bg-slate-700 text-neutral-50 font-semibold w-full p-2 pl-6 pr-6 rounded-lg shadow-lg" type="submit">Signup</button>
    </div>

    <a href="/login" class="block text-sky-700 mt-3">Log in instead</a>
  </form>
</div>

<script src="./js/signup.js"></script>