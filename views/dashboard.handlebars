<div class="p-12 flex flex-col h-full">
  <div class="grow">
    {{#each posts as |post| }}
    <div class="border-2 border-slate-600 bg-slate-600 rounded-xl mb-4">
      <div class="p-2 px-4 flex items-center justify-between text-neutral-50">
        <h2 class="block">
          <a class="text-xl font-semibold block" href="/edit-post/{{post.id}}">{{post.title}}</a>
        </h2>
        <div>
          {{format_date post.date_created}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="flex justify-center">
    <a href="/create-post" class="block border-none outline-none bg-slate-800 text-neutral-50 p-2 rounded-lg">+ New Post</a>
  </div>
</div>
